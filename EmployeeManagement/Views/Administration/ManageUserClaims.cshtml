@{
    ViewData["Title"] = "ManageUserClaims";
}
@model UserClaimsViewModel;

<form   asp-controller="Administration" asp-action="ManageUserClaims"  method="post">
    <div class="card">
        <div class="card-header">
         <input type="hidden" asp-for="@Model.userId" class="form-check-input">

     <h2>Manage Users Claims</h2>
        </div>
        <div class="card-body">
          @for (int i = 0; i < Model.Claims.Count; i++)
          {
              <div class="form-check m-1">
                 
                  <input type="hidden" asp-for="@Model.Claims[i].ClaimType" class="form-check-input">
                   
                  <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input">
                  <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                    @Model.Claims[i].ClaimType
                  </label>
              </div>
          }
                   <div asp-validation-summary="All" class="text-danger"></div>
            
        </div>
        <div class="card- footer">
           
     
        </div>
           
    </div>
    <div class="form-group " style="margin-top: 30px;" >  
                        <input type="submit" value="Update" class="btn btn-primary" />  
                        <a asp-controller="Administration" asp-action="EditUser" 
                         class="btn btn-danger ">Cancel</a>

            </div> 
</form>
