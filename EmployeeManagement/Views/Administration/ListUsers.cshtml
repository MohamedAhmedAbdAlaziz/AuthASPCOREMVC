@{
    ViewData["Title"] = "ListUsers";
}
@model IEnumerable<ApplicationUser>

    <h1>All Users </h1>

    @if(Model.Any()){
        foreach (var item in Model)
        {
           <div class="card">
        <div class="card-header">
             User Id : @item.Id
        </div>
        <div class="card-body">
            <h5 class="card-title">
                @item.UserName
            </h5>
        <form method="post" asp-controller="Administration" asp-action="DeleteUser"  asp-route-userId="@item.Id" >
         <a asp-controller="Administration" asp-action="EditUser" asp-route-userId="@item.Id"
          class="btn btn-primary ">edit</a>
          
          

           <span id="confirDeleteSpan_@item.Id" style="display: none;">
            <span>Are You sure you want to delete ?</span>
            <button type="submit" class="btn btn-danger" >yes</button>
           <a href="" class="btn btn-primary"  onclick="confirmDelete('@item.Id',false)">No</a>
           </span>
           <span id="DeleteSpan_@item.Id">
            <a href="#" class="btn btn-danger"
             onclick="confirmDelete('@item.Id',true) ">Delete</a>
           </span>
        </form>
         
        </div>
    </div> 
        }
 

    }
    
    @section scripts{
        <script src="~/js/Custom.js"></script>   
    }