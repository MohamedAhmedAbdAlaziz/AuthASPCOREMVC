@{
    ViewData["Title"] = "EditRole";
}

@using EmployeeManagement.ViewModels
@model  EditRoleViewModel
 
<div class="row">
    <div class="col-md-12">
        <form   asp-controller="Administration" asp-action="EditRole" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group">  
                <label asp-for="Id" class="control-label"></label>  
                <input asp-for="Id" readonly disabled class="form-control" type="text"/>  
                <span asp-validation-for="Id" class="text-danger"></span>  
            </div>  
            <div class="form-group">  
                <label asp-for="RoleName" class="control-label"></label>  
                <input asp-for="RoleName" class="form-control" type="text"/>  
                <span asp-validation-for="RoleName" class="text-danger"></span>  
            </div>  
            
            <div class="form-group " style="margin-top: 30px;" >  
                        <input type="submit" value="Update User" class="btn btn-primary" />  
                         <a asp-controller="Administration" asp-action="ListRoles" class="btn btn-warinig ">Cancel</a>
            </div> 
        <div class="card">
        <div class="card-header">
              users in the Role
        </div>
        <div class="card-body">
            
            @if (Model.users.Any())
            {
                foreach (var user in Model.users)
                {
                 <h5 class="card-tilte">
                    @user
                 </h5>   
                }
                
            }
            else{
                <h5 class="card-title"> Node at the momnet</h5>
            }
            <div class="card-footer">
           <a asp-controller="Administration" asp-action="EditUserInRole" asp-route-roleId="@Model.Id"  class="btn btn-primary">Add Or Remove Users</a>
           @* <a asp-controller="Administration" asp-action="CreateRole" class="btn btn-danger">Remove User</a> *@

            </div>
        </div>
        </div>
        </form>
    </div>
</div>