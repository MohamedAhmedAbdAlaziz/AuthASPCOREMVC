
@model List<UserRoleViewModel>
@{
    ViewData["Title"] = "EditUserInRole";
     var roleId= ViewBag.roleId;
     
}

<form   asp-controller="Administration" asp-action="EditUserInRole"  method="post">
    <div class="card">
        <div class="card-header">
     <input type="hidden"  id="roleId" name="roleId" class="form-control" value=@roleId >
        </div>
        <div class="card-body">
          @for (int i = 0; i < Model.Count; i++)
          {
              <div class="form-check m-1">
                 
                  <input type="hidden" asp-for="@Model[i].UserId" class="form-check-input">
                  <input  type="hidden" asp-for="@Model[i].UserName" class="form-check-input">
                
                  <input asp-for="@Model[i].IsSelected" class="form-check-input">
                  <label class="form-check-label" asp-for="@Model[i].IsSelected">
                    @Model[i].UserName
                  </label>
              </div>
          }
        </div>
        <div class="card- footer">
           
     
        </div>
           
    </div>
    <div class="form-group " style="margin-top: 30px;" >  
                        <input type="submit" value="Update" class="btn btn-primary" />  
                        <a asp-controller="Administration" asp-action="EditRole" 
                         class="btn btn-danger ">Cancel</a>

            </div> 
</form>

