@{
    ViewData["Title"] = "EditUser";
}
@model EditUserViewModel


<div class="row">
    <div class="col-md-12">
        <form   asp-controller="Administration" asp-action="EditUser" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group">  
                <label asp-for="Id" class="control-label"></label>  
                <input asp-for="Id" readonly disabled class="form-control" type="text"/>  
                <span asp-validation-for="Id" class="text-danger"></span>  
            </div> 
              <div class="form-group">  
                <label asp-for="UserName" class="control-label"></label>  
                <input asp-for="UserName" class="form-control" type="text"/>  
                <span asp-validation-for="UserName" class="text-danger"></span>  
            </div> 

            <div class="form-group">  
                <label asp-for="Email" class="control-label"></label>  
                <input asp-for="Email" class="form-control" type="text"/>  
                <span asp-validation-for="Email" class="text-danger"></span>  
            </div> 
            <div class="form-group">  
                <label asp-for="City" class="control-label"></label>  
                <input asp-for="City" class="form-control" type="text"/>  
                <span asp-validation-for="City" class="text-danger"></span>  
            </div> 
            
            <div class="form-group " style="margin-top: 30px;" >  
                        <input type="submit" value="Update User" class="btn btn-primary" />  
                         <a asp-controller="Administration" asp-action="ListRoles" class="btn btn-warinig ">Cancel</a>
            </div> 
        <div class="card">
        <div class="card-header">
              users in the Role
        </div>
        <div class="card-body">
            
            @if (Model.Roles.Any())
            {
                foreach (var user in Model.Roles)
                {
                 <h5 class="card-tilte">
                    @user
                 </h5>   
                }
            }
            else{
                <h5 class="card-title"> Node at the momnet</h5>
            }
             <div class="card-footer">
           <a asp-controller="Administration" asp-action="ManageUserRoles" asp-route-userId="@Model.Id"
             class="btn btn-primary">Manage Users Roles</a>
                  </div>
        </div>
        </div>

         <div class="card">
        <div class="card-header">
              users in the Claims
        </div>
        <div class="card-body">
            
            @if (Model.Claims.Any())
            {
                foreach (var claim in Model.Claims)
                {
                 <h5 class="card-tilte">
                    @claim
                 </h5>   
                }
                
            }
            else{
                <h5 class="card-title"> Node at the momnet</h5>
            }
                  <div class="card-footer">
           <a asp-controller="Administration" asp-action="ManageUserClaims" asp-route-userId="@Model.Id"
             class="btn btn-primary">Manage User Claims</a>
                  </div>
        </div>
        </div>
        </form>
    </div>
</div>
