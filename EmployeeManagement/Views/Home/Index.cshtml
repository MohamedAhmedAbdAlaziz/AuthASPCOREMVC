@using Core.Models
@model IEnumerable<Employee>;

@{
    ViewData["Title"] = "Home Page";
}

 

@* 
<a href='@Url.Action("details","home" , new {id=Employee.Id})' class="btn btn-primary">View</a>

    @Html.ActionLink("View" ,"details","home", new  {id=Employee.Id}) *@

<div class="row">

@foreach (var Employee in Model)
{
  
    var Photopa= "~/images/"+(Employee.PHotoPath?? "mosa.jpg");
  
 <div class="col-4 mb-4">
    <div class="card shadow-sm">
  <img

   src= "@Photopa"
     asp-append-version="true"  
    class="img-fluid bg-info"
    style="max-width: 200px;"
  />

  <div class="card-body d-flex flex-column">
    <p class="card-text">
      <a href="#">
        <h6 class="text-uppercase">@Employee.Name</h6></a
      >
    </p>
    <span class="mb-2">@Employee.Name</span>

    <div class="d-flex justify-content-between align-items-center">
      <div class="btn-group">
       <a asp-controller="home" asp-action="details" asp-route-id="@Employee.Id" class="btn btn-primary m-1">View</a>
    
    @* <a href='/home/details/@Employee.Id' class="btn btn-primary">View</a> *@
    <a asp-controller="home" asp-action="Edit" asp-route-id="@Employee.Id" class="btn btn-primary m-1">Edit</a>
    <a href='#' class="btn btn-primary m-1">Delete</a>
      </div>
    </div>
  </div>
</div>
</div>

}


</div>
    