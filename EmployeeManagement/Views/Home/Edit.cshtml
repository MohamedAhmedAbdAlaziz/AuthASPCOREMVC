@using EmployeeManagement.ViewModels
@model EmployeeEditViewModel;
@inject IEmployeeRepository _empRepository ;
@{
    ViewData["Title"] = "Edit Emoloyee";
    var Photopa= "~/images/"+(Model.ExistingPhotoPath?? "mosa.jpg");

}

<div class="row">  
    <div class="col-md-9">  
        <form enctype="multipart/form-data" asp-controller="Home" asp-action="Edit" method="post">  
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
               <input hidden asp-for="Id" />  
               <input hidden asp-for="ExistingPhotoPath" />  
            <div class="form-group">  
                <label asp-for="Name" class="control-label"></label>  
                <input asp-for="Name" class="form-control" />  
                <span asp-validation-for="Name" class="text-danger"></span>  
            </div>  
            <div class="form-group">  
                <label asp-for="Email" class="control-label"></label>  
                <input asp-for="Email" class="form-control" type="Email"/>  
                <span asp-validation-for="Email" class="text-danger"></span>  
            </div>  
                <div class="form-group row">  
                <label asp-for="Department" class="control-label"></label>  
              <div class="col-sm-10">
           <select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()" class="custom-select mr-sm-2" >
             
              <option value="">Please Select</option>
            </select>
              </div>
                 <div class="form-group row">  
                <label asp-for="Photo" class="col-sm-2 col-form-label"></label> 
                <div class="col-sm-10">
             <div class="custom-file">
                <input multiple asp-for="Photo" class="form-control custom-file-input" />  
                <label   class="  custom-file-label">Clisk here to change photo</label> 
            
             </div>
                </div> 
               
            </div>  

            
               <span asp-validation-for="Department" class="text-danger"></span>  

            </div>  
              <img class="card-img-top " src="@Photopa"   asp-append-version="true"style="max-width: 200px;">
            <div class="form-group">  
                        <input type="submit" value="Save User Details" class="btn btn-primary" />  
    <a asp-controller="home" asp-action="index" class="btn btn-warinig ">Cancel</a>
                        
            </div> 
          
            <b>@ViewBag.message</b>  
                </form>  
            </div>  
        </div>  